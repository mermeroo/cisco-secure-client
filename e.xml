<AnyConnectProfile xmlns="http://schemas.xmlsoap.org/encoding/">
    <ClientInitialization>
        <UseStartBeforeLogon UserControllable="true">true</UseStartBeforeLogon>
        <AutomaticVPNPolicy>connect</AutomaticVPNPolicy>
        <ServerCertificateThumbprint></ServerCertificateThumbprint>
        <ProxySettings>Native</ProxySettings>
        <AllowLocalProxyConnections>true</AllowLocalProxyConnections>
        <EnableScripting UserControllable="false">true</EnableScripting>
        <EnableAutomaticServerSelection>true</EnableAutomaticServerSelection>
        <LocalLanAccess UserControllable="false">false</LocalLanAccess>
    </ClientInitialization>
    <ServerList>
        <HostEntry>
            <HostName>Primary VPN Server</HostName>
            <HostAddress>vpn.example.com</HostAddress>
            <BackupServerList>
                <HostEntry>
                    <HostName>Backup VPN Server</HostName>
                    <HostAddress>backupvpn.example.com</HostAddress>
                </HostEntry>
            </BackupServerList>
        </HostEntry>
    </ServerList>
    <AutomaticCertificateSelection UserControllable="false">true</AutomaticCertificateSelection>
    <Preferences>
        <ShowPreConnectMessage>false</ShowPreConnectMessage>
        <MinimizeOnConnect>true</MinimizeOnConnect>
    </Preferences>
    <CertificateMatch>
        <KeyUsage>
            <MatchKey>Key_Encipherment</MatchKey>
            <MatchKey>Key_Agreement</MatchKey>
        </KeyUsage>
        <ExtendedKeyUsage>
            <ExtendedMatchKey>ClientAuth</ExtendedMatchKey>
        </ExtendedKeyUsage>
        <CertificateGroup>
            <RootCA>
                <Certificate>MIIDazCCAlOgAwIBAgI... (certificate content) ...AgX</Certificate>
            </RootCA>
        </CertificateGroup>
    </CertificateMatch>
    <ConnectFailurePolicy>Reconnect</ConnectFailurePolicy>
    <ReconnectBehavior>ReconnectAfterResume</ReconnectBehavior>
</AnyConnectProfile>
